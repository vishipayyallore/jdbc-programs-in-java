public class HelloJdbcMainCls {

	/**
	 * 
	 * @param args
	 */
	public static void main(String[] args) throws Exception {
		
		String propFileName = "mysqlconfig.properties";
		Manager _datastoreManager = new Manager(propFileName);
		Connection _datastoreConnection = _datastoreManager.getConnection();
		
		// Create and execute an SQL statement that returns some data.
		String sqlQuery = "SELECT * FROM city";
		
		ResultSet rs = Communicator.getResultSet(_datastoreConnection, sqlQuery);
		
		// Iterate through the data in the result set and display it.
		while (rs.next()) {
			System.out.println(rs.getString(1) + " " + rs.getString(2) + " " + rs.getString(3));
		}
		
		
